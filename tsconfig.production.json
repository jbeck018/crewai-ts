{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "inlineSources": false,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "incremental": false,
    "skipLibCheck": true,
    "emitDeclarationOnly": false
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/dist/**"
  ]
}
